<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="addStudent"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_light"
                android:typeface="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请选择要操作的表" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rdb_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="老师" />

                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rdb_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="学生" />
            </RadioGroup>

            <EditText
                android:id="@+id/et_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入账号" />

            <EditText
                android:id="@+id/et_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码" />


            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="find"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tv_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="findall"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tv_show1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delectall"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/et_del"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入删除的名字" />

            <TextView
                android:id="@+id/tv_show2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delter_one"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/et_upData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入要更新的数据名字" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="upata"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tv_show3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入查询的数据名字" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查询其中数据"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tv_show4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>